<div class="container max-w-screen-lg mx-auto">
  <% if flash[:notice].present? %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mx-auto sm:w-1/2 mb-4 flash-alert" role="alert">
      <div class="flex items-center">
        <span class="block sm:inline"><%= flash[:notice] %></span>
        <span class="absolute top-0 bottom-0 right-0 px-4 py-3 close-alert">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </span>
      </div>
    </div>
  <% end %>

  <% if flash[:alert].present? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mx-auto sm:w-1/2 mb-4 flash-alert" role="alert">
      <div class="flex items-center">
        <span class="block sm:inline"><%= flash[:alert] %></span>
        <span class="absolute top-0 bottom-0 right-0 px-4 py-3 close-alert">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </span>
      </div>
    </div>
  <% end %>
</div>
