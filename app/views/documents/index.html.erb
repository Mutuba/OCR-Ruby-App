<!-- app/views/documents/index.html.erb -->
<div class="container mx-auto p-4">
  <div class="bg-white rounded-lg shadow p-6">
    <h1 class="text-2xl font-bold mb-4">Documents</h1>
    <ul class="divide-y divide-gray-200">
      <% @documents.each do |document| %>
        <li class="py-4 flex items-center space-x-4">
          <!-- Placeholder avatar, replace src with actual avatar path if available -->
          <img class="h-10 w-10 rounded-full object-cover" src="https://via.placeholder.com/150" alt="Avatar">
          <div>
            <h2 class="text-lg font-semibold">
              <%= link_to document.title, document_path(document), class: "text-blue-600 hover:underline" %>
            </h2>
            <p class="text-sm text-gray-500">Uploaded on <%= document.created_at.strftime("%B %d, %Y") %></p>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
