<div class="container mx-auto p-4">
  <div class="overflow-auto max-h-screen p-4 bg-white rounded-lg shadow">
    <p class="mt-4">
      <strong>Title:</strong>
      <%= @document.title %>
    </p>

    <p class="mt-4">
      <strong>File:</strong>
      <%= link_to @document.file.filename.to_s, rails_blob_path(@document.file, disposition: "attachment") %>
    </p>

    <% if @ocr_text.present? %>
      <p class="mt-4">
        <strong>Document Text:</strong>
        <pre><%= @ocr_text %></pre>
      </p>
    <% end %>
  </div>
</div>
